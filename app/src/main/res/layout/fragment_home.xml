<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragment.HomeFragment">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="17dp"
        android:src="@drawable/txtlogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/notification"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        app:tint="@color/brand_color" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="22dp"
        android:layout_marginTop="22dp"
        app:hintAnimationEnabled="false"
        app:hintEnabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:background="@drawable/text_bg"
            android:drawableStart="@drawable/baseline_add_24"
            android:drawablePadding="17dp"
            android:fontFamily="@font/font"
            android:text="Create custom order"
            android:textColor="#777777"
            android:textSize="29dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="0dp"
        android:layout_height="350dp"
        android:layout_marginTop="17dp"
        android:src="@drawable/homephoto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:fontFamily="@font/athleticsbold"
        android:text="Print Options"
        android:textColor="@color/brand_color"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/imageView6" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:fontFamily="@font/atleticsmedium"
        android:text="view all"
        android:textColor="#929292"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView4"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="@+id/textView4" />

    <ImageView
        android:id="@+id/imageParty"
        android:layout_width="127dp"
        android:layout_height="128dp"
        android:layout_marginTop="17dp"
        android:src="@drawable/partysign"
        app:layout_constraintEnd_toStartOf="@id/imageBrochures"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <ImageView
        android:id="@+id/imageBrochures"
        android:layout_width="127dp"
        android:layout_height="128dp"
        android:src="@drawable/brochures"
        app:layout_constraintBottom_toBottomOf="@+id/imageParty"
        app:layout_constraintEnd_toStartOf="@id/imageFlexBanner"
        app:layout_constraintStart_toEndOf="@+id/imageParty"
        app:layout_constraintTop_toTopOf="@+id/imageParty" />

    <ImageView
        android:id="@+id/imageFlexBanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/flexbanner"
        app:layout_constraintBottom_toBottomOf="@+id/imageParty"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageBrochures"
        app:layout_constraintTop_toTopOf="@+id/imageParty" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="Party signs"
        android:textColor="#929292"
        android:fontFamily="@font/atleticsmedium"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="@+id/imageParty"
        app:layout_constraintStart_toStartOf="@+id/imageParty"
        app:layout_constraintTop_toBottomOf="@+id/imageParty" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/atleticsmedium"
        android:text="Brochures"
        android:textColor="#929292"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView6"
        app:layout_constraintEnd_toEndOf="@+id/imageBrochures"
        app:layout_constraintStart_toStartOf="@+id/imageBrochures"
        app:layout_constraintTop_toTopOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/atleticsmedium"
        android:text="Flex Banner"
        android:textColor="#929292"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView6"
        app:layout_constraintEnd_toEndOf="@+id/imageFlexBanner"
        app:layout_constraintStart_toStartOf="@+id/imageFlexBanner"
        app:layout_constraintTop_toTopOf="@+id/textView6" />

    <ImageView
        android:id="@+id/promoCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/promocode"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>